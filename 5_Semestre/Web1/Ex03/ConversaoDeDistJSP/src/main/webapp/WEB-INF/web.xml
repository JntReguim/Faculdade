<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    
    <display-name>Calculadora JSP</display-name>

    <!-- Mapeamento do Servlet -->
    <servlet>
        <servlet-name>ValidaServlet</servlet-name>
        <servlet-class>br.ufscar.dc.dsw.servlet.ValidaServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ValidaServlet</servlet-name>
        <url-pattern>/valida</url-pattern>
    </servlet-mapping>
    
</web-app>

